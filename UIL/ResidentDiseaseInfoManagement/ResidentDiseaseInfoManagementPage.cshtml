<script>
    $(function () {
        var count = 0
        function rowStyle(row, index) {
            var classes = ['active', 'success', 'info', 'warning', 'danger']

            if (index % 2 === 0) {
                count++
                if (count >= classes.length) {
                    count = 0
                }
                return {
                    classes: classes[count]
                }
            }
            return {}
        }

        $('#DoctorManagementTable').bootstrapTable({
            url: "GetResidentDiseaseInfos.ashx",
            pagination: true,
            pageSize: 4,
            sidePagination: 'server',
            pageList: [5, 10, 'ALL'],
            search: true,
            mobileResponsive: true,
            striped: true,
            rowStyle: rowStyle,
            showColumns: true,
            showRefresh: true,
            showToggle: true,
            showPaginationSwitch: true,
            clickToSelect: true,
            showExport: true,
            exportTypes: ['json', 'xml', 'csv', 'txt', 'sql', 'doc', 'excel'],
            columns: [{
                field: 'Id',
                title: '居民内部编号',
                visible: false,//不可见，工具栏可见
                switchable: false,//都不见
                align: 'center'
            }, {
                field: 'HODA',
                title: '药物过敏史',
                align: 'center'
            }, {
                field: 'EH',
                title: '暴露史',
                align: 'center'
            }, {
                field: 'HBP',
                title: '高血压',
                align: 'center'
            }, {
                field: 'HBPTime',
                title: '高血压确诊时间',
                align: 'center'
            }, {
                field: 'GDM',
