<script>
    $(function () {
        var count = 0
        function rowStyle(row, index) {
            var classes = ['active', 'success', 'info', 'warning', 'danger']

            if (index % 2 === 0) {
                count++
                if (count >= classes.length) {
                    count = 0
                }
                return {
                    classes: classes[count]
                }
            }
            return {}
        }
        var $deleteBtn = $('#MajorProblemDeleteBtn')
        var $addBtn = $('#MajorProblemAddBtn')
        var $table = $('#MajorProblemTable')
        $deleteBtn.click(function () {
            var ids = $.map($table.bootstrapTable('getSelections'), function (row) {
                console.log(row.id)
                return row.id
            })
            console.log('ids')
            console.log(ids)
            var idsObj = Object
            idsObj.ids = ids
            if (ids.length != 0) {
                $.ajax({
                    url: "{:U('PlatformManager/deleteManager')}",
                    type: 'post',
                    data: idsObj,
                    dataType: 'json'
                }).done(function (data, status, jqXHR) {
                    console.log(data)
                    if (data.state == 1) {
                        toastr.success(data.content + '  ' + 'Total Delete number:' + data.deleteNum)
                        $('#MajorProblemTable').bootstrapTable('refresh');
                    } else {
                        //data.state = 0
                        toastr.error(data.content)
                    }
                }).fail(function () {
                    toastr.error('Network Communication Failure')
                })

            }

            $table.bootstrapTable('remove', {
                field: 'id',
                values: ids
            })
        })


        $table.bootstrapTable({
            url: 'MajorProblemTable.cshtml',
            pagination: true,
            pageSize: 4,
            sidePagination: 'server',
            pageList: [5, 10, 'ALL'],
            search: true,
            toolbar: '#toolbar',
            mobileResponsive: true,
            queryParamsType: "limit",//查询参数组织方式
            queryParams: function getParams(params) {
                console.log(params)
                return params;
            },
            striped: true,
            rowStyle: rowStyle,
            showColumns: true,
            showRefresh: true,
            showToggle: true,
            showPaginationSwitch: true,
            clickToSelect: true,
            showExport: true,
            exportTypes: ['json', 'xml', 'csv', 'txt', 'sql', 'doc', 'excel'],
            onEditableSave: function (field, row, oldValue, $el) {
                $.ajax({
                    type: "post",
                    url: '{:U("PlatformManager/edit")}',
                    data: { strJson: row },
                    dataType: 'json'
                }).done(function (data, status, jqXHR) {
                    console.log(data)
                    if (data.state == 1) {
                        toastr.success(data.content)
                        $('#MajorProblemTable').bootstrapTable('refresh');
                    } else {
                        toastr.error(data.content)
                    }
                }).fail(function () {
                    toastr.error('Network Communication Failure')
                })
            },
            columns: [{
                field: 'state',
                checkbox: true,
            }, {
                field: 'CheckId',
                title: '体检编号',
                visible: false,//不可见，工具栏可见
                switchable: false,//都不见
                align: 'center'
            }, {
                field: 'CerebrovascularDiseaseId',
                title: '脑血管疾病',
                align: 'center'
            }, {
                field: 'KidneyDiseaseId',
                title: '肾脏疾病',
                editable: true,
                align: 'center'
            }, {
                field: 'HeartDiseaseId',
                title: '心脏疾病',
                editable: true,
                align: 'center'
            }, {
                field: 'VascularDiseaseId',
                title: '血管疾病',
                editable: true,
                align: 'center'
            }, {
                field: 'EyeDiseaseId',
                title: '眼部疾病',
                editable: true,
                align: 'center'
            }, {
                field: 'DiseasesOfTheNervousSystem',
                title: '神经系统疾病',
                editable: true,
                align: 'center'
            }, {
                field: 'OtherSystemDiseases',
                title: '其他系统疾病',
                editable: true,
                align: 'center'
            }, {
                field: 'HospitalizationIs',
                title: '住院治疗情况',
                editable: true,
                align: 'center'
            }, {
                field: 'MainMedications',
                title: '主要用药情况',
                editable: true,
                align: 'center'
            }, {
                field: 'IPVHistory',
                title: '非免疫规划预防接种史',
                editable: true,
                align: 'center'
            }, {
                field: 'HealthAssessment',
                title: '健康评价',
                editable: true,
                align: 'center'
            }, {
                field: 'Guidance',
                title: '健康指导',
                editable: true,
                align: 'center'
            }, {
                field: 'RiskControlSuggestions',
                title: '危险因素控制建议',
                editable: true,
                align: 'center'
            }],
        })


    })
</script>
